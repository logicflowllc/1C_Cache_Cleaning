        <Label x:Name="Label_GitHub" Content="GitHub" HorizontalAlignment="Left" Margin="9,202,0,0" VerticalAlignment="Top" Padding="0" Width="35" FontSize="10" Foreground="#FF789DFF" MouseLeftButtonUp="Label_GitHub_MouseLeftButtonUp" Background="{x:Null}"/>
        <Image x:Name="startButton" HorizontalAlignment="Center" Height="99" Margin="122,83,122,39" VerticalAlignment="Center" Width="100" Source="Images/1CCC_Start_Normal.bmp" MouseDown="CacheCleaningButton_Click" MouseEnter="Image_MouseEnter" MouseLeave="startButton_MouseLeave" Stretch="None">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Label x:Name="Label_Version" Content="0.2.0808.2359" HorizontalAlignment="Left" Margin="9,189,0,0" VerticalAlignment="Top" Padding="0" Width="73" FontSize="10" Foreground="#FF494949" Background="{x:Null}"/>

