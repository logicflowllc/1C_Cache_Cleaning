        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1C_Cache_Cleaning"
        mc:Ignorable="d"
        Title="Чистка кэша 1С:Предприятие // Logic Flow" Height="250" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="1CCC_Rocket.ico">
    <Grid Background="#FF212121">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image HorizontalAlignment="Left" Height="765" Margin="-149,-92,-328,-452" VerticalAlignment="Top" Width="821" Source="Images/LF_Logo_Small_Edges_1000x1000.png" Opacity="0.2"/>

        <Label x:Name="Label_Syn1" Content="Утилита выполняет удаление кэша 1С:Предприятия" HorizontalAlignment="Center" Margin="13,10,13,0" VerticalAlignment="Top" Padding="0" Width="318" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="Gainsboro" Height="16" HorizontalContentAlignment="Center"/>
        <Label x:Name="Label_Syn4" Content="Завершите все сеансы 1С до начала чистки!" HorizontalAlignment="Center" Margin="32,51,32,0" VerticalAlignment="Top" Padding="0" Width="280" Foreground="#FFFFBEBE" Background="{x:Null}" HorizontalContentAlignment="Center"/>
